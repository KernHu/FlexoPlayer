<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/media_controller_height"
    android:background="@color/media_controller_background"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/media_controller_padding_left"
    android:paddingRight="@dimen/media_controller_padding_right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/apace_player_fast_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/media_controller_icon_padding"
            android:src="@drawable/icon_fast_rewind" />

        <ImageView
            android:id="@+id/apace_player_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/media_controller_icon_padding"
            android:src="@drawable/icon_play" />

        <ImageView
            android:id="@+id/apace_player_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/media_controller_icon_padding"
            android:src="@drawable/icon_fast_forward" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/media_controller_margin">

        <TextView
            android:id="@+id/apace_player_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="5：40"
            android:textColor="@color/media_controller_text_color"
            android:textSize="@dimen/media_controller_text_size" />

        <TextView
            android:id="@+id/apace_player_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0：00"
            android:textColor="@color/media_controller_text_color"
            android:textSize="@dimen/media_controller_text_size" />

        <SeekBar
            android:id="@+id/apace_player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/media_controller_seekbar_margin"
            android:layout_toLeftOf="@id/apace_player_duration"
            android:layout_toRightOf="@id/apace_player_progress"
            android:paddingRight="@dimen/media_controller_seekbar_margin" />

    </RelativeLayout>

</LinearLayout>